<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:with field='res' type='com.puzzlebazar.client.Resources' />

	<g:VerticalPanel styleName='{res.style.dialogVPanel}' >
    <g:HTML>Sending name to the server:</g:HTML>
    <g:Label ui:field='textToServerLabel' />
    <g:HTML>Server replies:</g:HTML>
    <g:HTML ui:field='serverResponseLabel' />
    <g:cell horizontalAlignment='ALIGN_RIGHT'>
      <g:Button text='Close' ui:field='closeButton' styleName='{res.style.closeButton}' />
    </g:cell>
	</g:VerticalPanel>

</ui:UiBinder>