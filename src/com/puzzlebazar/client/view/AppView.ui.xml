<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style>
		.mainContainer {
			height: auto !important;
			margin: 0px;
			max-width: 1160px;
			min-height: 100%;
			padding: 0px;
			position: relative;
		}
	</ui:style>

  <ui:with field='resources' type='com.puzzlebazar.client.resources.Resources' />

	<g:DockLayoutPanel unit='PX'>
	  <g:north size='25'>
      <g:FlowPanel ui:field='topBarContainer' />
	  </g:north>
	
    <g:north size='75'>
      <g:Image resource='{resources.logo}' />
    </g:north>

	  <g:west size='200'>
      <g:FlowPanel ui:field='linkColumnContainer' />
  	</g:west>
	
	  <g:center>
	    <g:ScrollPanel>
	      <g:Label>Content Area</g:Label>
	    </g:ScrollPanel>
	  </g:center>
	</g:DockLayoutPanel>

</ui:UiBinder>