
	<!--
		This file is the typical main view. Its width is limited for better
		readability. It has a search header, a left column (usually for
		links), and a footer.
	-->

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>


	<ui:with field='resources' type='com.puzzlebazar.client.resources.Resources' />

	<g:DockLayoutPanel unit='PX'
		addStyleNames='{resources.style.splitMainView}'>

		<g:north size='75'>
			<g:Image resource='{resources.logo}' />
		</g:north>

		<g:west size='200'>
			<g:FlowPanel ui:field='sideBarContainer' />
		</g:west>

		<g:center>
			<g:FlowPanel ui:field='centerContentContainer' />
		</g:center>
	</g:DockLayoutPanel>

</ui:UiBinder>