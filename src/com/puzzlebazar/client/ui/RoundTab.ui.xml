<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style src='../resources/defines.css' type='com.puzzlebazar.client.ui.BaseTab.Style'>
		
		.tab {
			float: left;
			margin-right: 8px;
		}
		
		.tab a,.tab a:visited,.tab a:hover {
			text-decoration: none;
			cursor: pointer;
			cursor: hand;
			color: black;
		}
		
		.tab_inner {
			margin: 0px;
			padding: 0px 13px;
		}
		
		.active {
			background-color: darkPanelColor;
		}
		
		.inactive {
			background-color: lightPanelColor;
		}
	</ui:style>

  <ui:with field='resources' type='com.puzzlebazar.client.resources.Resources' />


	<g:HTMLPanel addStyleNames="{style.tab} {style.inactive}">
		<div class="{resources.style.round4}" />
		<div class="{resources.style.round2}" />
		<div class="{resources.style.round1}" />
		<div class="{style.tab_inner}">
			<g:Hyperlink ui:field="hyperlink" />
		</div>
	</g:HTMLPanel>

</ui:UiBinder>