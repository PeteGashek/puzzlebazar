<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:with field='resources' type='com.puzzlebazar.client.resources.Resources' />

	<ui:style src='../resources/defines.css'>
		.horizontalBar {
			width: 100%;
			height: 5px;
			background-color: darkPanelColor;
		}
	</ui:style>

	<g:FlowPanel>
		<g:HTMLPanel>
			<g:FlowPanel ui:field="tabPanel" />
			<div style="clear: both;"></div>
			<div class="{style.horizontalBar}" />
		</g:HTMLPanel>
		<g:FlowPanel ui:field="tabContentContainer" />
	</g:FlowPanel>

</ui:UiBinder>